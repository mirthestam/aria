<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>nl.mirthestam.aria</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Aria</name>
  <summary>In sync with your music</summary>
  <description>
    <p>A remote control app for MPD and MPD-based players like Volumio that lets you browse and explore their music libraries, with dedicated support for classical music.</p>
  </description>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </recommends>
  <screenshots>
  <screenshot type="default">
    <image>https://github.com/mirthestam/aria/blob/main/screenshots/medium.png?raw=true</image>
    <caption>Main window</caption>
  </screenshot>
  <screenshot>
    <image>https://github.com/mirthestam/aria/blob/main/screenshots/small.png?raw=true</image>
    <caption>Mobile view</caption>
  </screenshot>
  </screenshots>
  <custom>
    <value key="Purism::form_factor">mobile</value>
  </custom>
  <launchable type="desktop-id">nl.mirthestam.aria.desktop</launchable>
  <url type="bugtracker">https://github.com/mirthestam/aria/issues</url>
  <url type="homepage">https://github.com/mirthestam/aria</url>
  <url type="vcs-browser">https://github.com/mirthestam/aria</url>
  <content_rating type="oars-1.1" />
  <translation type="gettext">nl.mirthestam.aria</translation>
  <provides>
    <binary>aria</binary>
  </provides>
  <update_contact>mirthe@nuvina.nl</update_contact>
</component>

