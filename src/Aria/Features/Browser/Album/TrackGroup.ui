<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.99.9 -->
<interface>
  <!-- interface-name MainWindow.ui -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="AriaFeaturesBrowserAlbumTrackGroup" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox" id="header-box">
            <property name="orientation">horizontal</property>
            <child>
              <object class="GtkLabel" id="header-label">
                <property name="css-classes">heading</property>
                <property name="ellipsize">end</property>
                <property name="hexpand">True</property>
                <property name="single-line-mode">True</property>
                <property name="valign">fill</property>
                <property name="xalign">0.0</property>
              </object>
            </child>
            <child>
              <object class="AdwSplitButton">
                <property name="action-name">group.enqueue-default</property>
                <property name="css-classes">flat</property>
                <property name="halign">end</property>
                <property name="icon-name">list-low-priority-symbolic</property>
                <property name="menu-model">group-menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="info-box">
            <property name="orientation">vertical</property>
            <child>
              <object class="AriaFeaturesBrowserAlbumCreditBox" id="credit-box"/>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkPopoverMenu" id="track-popover-menu">
        <property name="halign">start</property>
        <property name="has-arrow">false</property>
      </object>
    </child>    
    <child>
      <object class="GtkListBox" id="tracks-listbox">
        <child>
          <object class="GtkGestureClick" id="track-gesture-click">
            <property name="button">3</property>
          </object>
        </child>
        <property name="css-classes">boxed-list</property>
      </object>
    </child>
  </template>
  <menu id="group-menu">
    <item>
      <attribute name="action">group.enqueue-replace</attribute>
      <attribute name="label">Replace Queue</attribute>
    </item>
    <item>
      <attribute name="action">group.enqueue-next</attribute>
      <attribute name="label">Enqueue Next</attribute>
    </item>
    <item>
      <attribute name="action">group.enqueue-end</attribute>
      <attribute name="label">Enqueue Last</attribute>
    </item>
  </menu>
</interface>
