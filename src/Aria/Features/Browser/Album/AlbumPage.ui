<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.99.9 -->
<interface>
  <!-- interface-name MainWindow.ui -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="AriaFeaturesBrowserAlbumAlbumPage" parent="AdwNavigationPage">
    <property name="title">Album</property>
    <child>
      <object class="AdwToolbarView">
        <property name="content">
          <object class="GtkStack">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="vexpand">False</property>
                <child>
                  <object class="AdwBanner" id="partial-banner">
                    <property name="action-name">album.full</property>
                    <property name="button-label">Full Album</property>
                    <property name="button-style">default</property>
                    <property name="revealed">True</property>
                    <property name="valign">start</property>
                    <property name="visible">False</property>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="child">
                      <object class="GtkBox">
                        <property name="margin-bottom">24</property>
                        <property name="margin-end">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-top">6</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="AdwClamp" id="info-clamp">
                            <property name="child">
                              <object class="GtkBox">
                                <property name="margin-top">6</property>
                                <property name="orientation">vertical</property>
                                <property name="spacing">1</property>
                                <property name="vexpand">False</property>
                                <child>
                                  <object class="AdwClamp" id="cover-clamp">
                                    <property name="halign">start</property>
                                    <property name="maximum-size">200</property>
                                    <child>
                                      <object class="GtkPicture" id="cover-picture">
                                        <property name="alternative-text">Album cover</property>
                                        <property name="content-fit">scale-down</property>
                                        <property name="css-classes">cover</property>
                                        <property name="halign">start</property>
                                        <property name="height-request">180</property>
                                        <property name="hexpand">False</property>
                                        <property name="keep-aspect-ratio">True</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel" id="title-label">
                                    <property name="css-classes">title-3</property>
                                    <property name="halign">fill</property>
                                    <property name="justify">left</property>
                                    <property name="margin-bottom">8</property>
                                    <property name="margin-end">0</property>
                                    <property name="margin-start">0</property>
                                    <property name="margin-top">14</property>
                                    <property name="wrap">True</property>
                                    <property name="xalign">0.0</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwWrapBox" id="albumartists-box">
                                    <property name="halign">start</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                            <property name="margin-bottom">12</property>
                            <property name="margin-end">0</property>
                            <property name="maximum-size">600</property>
                          </object>
                        </child>
                        <child>
                          <object class="AdwClamp">
                            <property name="child">
                              <object class="GtkBox" id="tracks-box">
                                <property name="orientation">vertical</property>
                                <property name="spacing">24</property>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-title">False</property>
            <child type="end">
              <object class="GtkButton" id="play-button">
                <property name="action-name">album.play</property>
                <property name="icon-name">media-play</property>
                <property name="tooltip-text">Play album now (replaces current queue)</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="enqueue-button">
                <property name="action-name">album.enqueue</property>
                <property name="icon-name">media-playlist-append-symbolic</property>
                <property name="tooltip-text">Append album to the end of the queue</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
